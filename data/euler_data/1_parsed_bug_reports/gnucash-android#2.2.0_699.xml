<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bug>
    <id>699</id>
    <title>Transaction details screen footer disappears</title>
    <description>
        <paragraph id="1">
            <sentence id="1.1">#### Steps to reproduce the behaviour</sentence>
            <sentence id="1.2">1. Click on existing transaction</sentence>
            <sentence id="1.3">1. Click on edit transaction FAB</sentence>
            <sentence id="1.4">1. Click on splits icon</sentence>
            <sentence id="1.5">1. Add a split</sentence>
            <sentence id="1.6">1. Click "save"</sentence>
            <sentence id="1.7">1. Click "save" again</sentence>
        </paragraph>
        <paragraph id="2">
            <sentence id="2.1">#### Expected behaviour</sentence>
            <sentence id="2.2">Footer visible.</sentence>
        </paragraph>
        <paragraph id="3">
            <sentence id="3.1">#### Actual behaviour</sentence>
            <sentence id="3.2">Footer removed (balance and date).</sentence>
        </paragraph>
        <paragraph id="4">
            <sentence id="4.1">#### Software specifications</sentence>
            <sentence id="4.2">* GnuCash Android version: 2.2.0</sentence>
            <sentence id="4.3">* System Android version: 6.0</sentence>
            <sentence id="4.4">* Device type: Any</sentence>
        </paragraph>
    </description>
</bug>
